fontname cozette

color activeborder '#09081c'
color inactiveborder '#09081c'

color menubg '#131138'
color menufg '#09081c'
color font '#a4a4fc'
color selfont '#e0e0fc'

borderwidth 4

command qutebrowser qutebrowser
command pcmanfm pcmanfm
command poweroff "alacritty -e sudo halt"
command reboot "alacritty -e sudo reboot"

sticky yes

unbind-key all

bind-key M-Return alacritty
bind-key M-x window-delete
bind-key M-q quit
bind-key M-r restart

bind-key M-1 group-only-1
bind-key M-2 group-only-2
bind-key M-3 group-only-3

bind-key MS-1 window-movetogroup-1
bind-key MS-2 window-movetogroup-2
bind-key MS-3 window-movetogroup-3

unbind-mouse all

bind-mouse M-1 window-move
bind-mouse M-3 window-resize

bind-mouse "1" menu-exec
bind-mouse "3" menu-cmd


snapdist 23
